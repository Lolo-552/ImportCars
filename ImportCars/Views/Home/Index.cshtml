@model ImportCars.ViewModels.HomePageModel

@{
    ViewData["Title"] = "Home Page";
}
<!-- Page Header-->
<header class="page-header-ui page-header-ui-light bg-img-cover overlay overlay-dark overlay-80" style="background-image: url('/img/header-img.jpg')">
    <div class="page-header-ui-content py-5 position-relative">
        <div class="container px-5">
            <div class="row gx-5 justify-content-center">
                <div class="col-xl-8 col-lg-10 text-center">
                    <h1 class="page-header-ui-title">Rent your home or extra room</h1>
                    <p class="page-header-ui-text mb-5">Opening your home to vacationers is a great way to earn some extra income, and this is a great way to get started!</p>
                    <a class="btn btn-light fw-500 me-2" href="#!">Get Started</a>
                    <a class="btn btn-dark fw-500" href="#!">Learn More</a>
                </div>
            </div>
        </div>
    </div>
    <div class="svg-border-rounded text-white">
        <!-- Rounded SVG Border-->
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 144.54 17.34" preserveAspectRatio="none" fill="currentColor"><path d="M144.54,17.34H0V0H144.54ZM0,0S32.36,17.34,72.27,17.34,144.54,0,144.54,0"></path></svg>
    </div>
</header>
<!--Aukcje wkrótce-->
<section class="bg-white py-10">
    <div class="text-center"><h2 class="section-title">Aukcje wkrótce</h2></div>
    <div class="container px-5">
        <div id="carouselExampleControl" class="carousel carousel-dark slide" data-bs-ride="carousel">
            <div class="carousel-inner p-4">
                @{
                    int counter = 0;

                        foreach (var item in Model.Auctions)
                        {
                            if (counter % 3 == 0)
                            {
                                if (counter == 0)
                                {
                                    @:<div class="carousel-item active">
                                }
                                else
                                {
                                    @:<div class="carousel-item">
                                }
                    
                                @:<div class="row gx-5 mb-5">
                            }

                            <div class="col-lg-4 mb-5">
                                <a class="card lift h-100" href="#!">
                                    <img class="card-img-top" src="@Url.Content(item.Images?.FirstOrDefault()?.Path)" alt="..." />
                                    <div class="card-body">
                                        <h4 class="card-title mb-2">@item.Name</h4>
                                        <ul class="car-info">
                                            <li><span>@item.ProductionYear</span></li>
                                            <li><span>@item.EngineType</span></li>
                                            <li><span>@item.EngineCapacity</span></li>
                                        </ul>
                                        <span>Przewidywana cena: </span><span class="auction-price">@string.Concat(item.Price," zł")</span>
                                    </div>
                                    <div class="card-footer bg-transparent border-top d-flex align-items-center justify-content-between">
                                        <div class="small text-primary">Sprawdz</div>
                                        <div class="small text-primary"><i data-feather="arrow-right"></i></div>
                                    </div>
                                </a>
                            </div>

                            if (counter % 3 == 2)
                            {
                                @:</div></div>
                            }

                            counter++;
                        }

                        // Zamknij ostatni <div> jeśli nie jest już zamknięty
                        if (counter % 3 != 0)
                        {
                            @:</div></div>
                        }
                    }
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControl" data-bs-slide="prev" style="left: -204px;">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControl" data-bs-slide="next" style="right: -204px">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>


        <div class="text-center mb-4"><h2 class="section-title">Często zadawane pytania</h2></div>
        <div class="accordion" id="accordionFaq">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne"><button class="accordion-button py-4" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">Is there a minimum number of nights?</button></h2>
                <div class="accordion-collapse collapse show" id="collapseOne" aria-labelledby="headingOne" data-bs-parent="#accordionFaq"><div class="accordion-body">Lorem ipsum dolor sit amet consectetur adipisicing elit. Iusto facere placeat dolor tempora dicta! Provident, vero voluptas! Culpa at, dolor repellat tenetur sunt, nobis repudiandae odit veniam, a placeat quasi.</div></div>
